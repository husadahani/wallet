# ==================================================
# ALCHEMY ACCOUNT KIT CONFIGURATION FOR BNB MAINNET
# ==================================================

# Alchemy API Key (Required)
# Get from: https://dashboard.alchemy.com/
NEXT_PUBLIC_ALCHEMY_API_KEY=your_alchemy_api_key_here

# Alchemy App ID for Embedded Accounts
# Get from: https://dashboard.alchemy.com/accounts
NEXT_PUBLIC_ALCHEMY_APP_ID=your_alchemy_app_id_here

# ==================================================
# BNB SMART CHAIN MAINNET CONFIGURATION
# ==================================================

# BNB Smart Chain Mainnet RPC (Required)
NEXT_PUBLIC_BNB_RPC_URL=https://bnb-mainnet.g.alchemy.com/v2/your_alchemy_api_key_here

# Gas Manager Policy ID for BNB Mainnet (Required for gasless transactions)
NEXT_PUBLIC_BNB_GAS_POLICY_ID=your_bnb_gas_policy_id_here

# Default Chain Configuration
NEXT_PUBLIC_DEFAULT_CHAIN_ID=56
NEXT_PUBLIC_DEFAULT_CHAIN_NAME=BNB Smart Chain
NEXT_PUBLIC_DEFAULT_NETWORK_SYMBOL=BNB

# ==================================================
# ALCHEMY EMBEDDED ACCOUNTS CONFIGURATION
# ==================================================

# Alchemy Signer Configuration
NEXT_PUBLIC_ALCHEMY_SIGNER_CONNECTION_CONFIG={"rpcUrl":"https://bnb-mainnet.g.alchemy.com/v2/your_alchemy_api_key_here","iframeConfig":{"iframeContainerId":"alchemy-signer-iframe"}}

# Account Kit Features
NEXT_PUBLIC_ENABLE_SOCIAL_LOGIN=true
NEXT_PUBLIC_ENABLE_EMAIL_LOGIN=true
NEXT_PUBLIC_ENABLE_PASSKEY_LOGIN=true

# Smart Account Configuration
NEXT_PUBLIC_ACCOUNT_TYPE=modular_account
NEXT_PUBLIC_ENABLE_SESSION_KEYS=true
NEXT_PUBLIC_ENABLE_MULTI_OWNER=false

# ==================================================
# ALCHEMY GAS MANAGER CONFIGURATION
# ==================================================

# Gas Sponsorship Settings
NEXT_PUBLIC_ENABLE_GAS_SPONSORSHIP=true
NEXT_PUBLIC_GAS_SPONSORSHIP_POLICY_ID=your_bnb_gas_policy_id_here

# Gas Limits
NEXT_PUBLIC_DAILY_GAS_LIMIT_USD=10.00
NEXT_PUBLIC_TRANSACTION_GAS_LIMIT_USD=2.00
NEXT_PUBLIC_MONTHLY_GAS_LIMIT_USD=100.00

# ==================================================
# SOCIAL LOGIN CONFIGURATION (ALCHEMY MANAGED)
# ==================================================

# OAuth Redirect Configuration
NEXT_PUBLIC_OAUTH_REDIRECT_URI=http://localhost:3000
NEXT_PUBLIC_OAUTH_SUCCESS_REDIRECT=/dashboard

# Alchemy handles social login providers internally
# No additional OAuth configuration needed

# ==================================================
# APPLICATION SETTINGS
# ==================================================

# App Configuration
NEXT_PUBLIC_APP_NAME=BNB Smart Wallet
NEXT_PUBLIC_APP_DESCRIPTION=Secure BNB Smart Chain wallet with social login

# Feature Flags
NEXT_PUBLIC_ENABLE_NETWORK_SWITCHING=false
NEXT_PUBLIC_ENABLE_TOKEN_TRANSFERS=true
NEXT_PUBLIC_ENABLE_NFT_SUPPORT=true

# Security
NEXT_PUBLIC_SESSION_TIMEOUT=86400
NEXT_PUBLIC_AUTO_LOGOUT_ENABLED=true

# ==================================================
# DEVELOPMENT SETTINGS
# ==================================================

# Development Mode
NEXT_PUBLIC_DEBUG_MODE=false
NEXT_PUBLIC_LOG_LEVEL=info

# Testing
NEXT_PUBLIC_ENABLE_DEMO_MODE=false

# ==================================================
# SETUP INSTRUCTIONS
# ==================================================

# To set up your BNB Smart Chain wallet with Alchemy:
# 
# 1. ALCHEMY ACCOUNT SETUP:
#    - Go to https://dashboard.alchemy.com/
#    - Create a new app on BNB Smart Chain Mainnet
#    - Copy API Key to NEXT_PUBLIC_ALCHEMY_API_KEY
#    - Copy the RPC URL to NEXT_PUBLIC_BNB_RPC_URL
#
# 2. ALCHEMY EMBEDDED ACCOUNTS SETUP:
#    - Go to https://dashboard.alchemy.com/accounts
#    - Create a new Embedded Account configuration
#    - Enable social login providers (Google, Facebook, Twitter, etc.)
#    - Set redirect URI to your domain (http://localhost:3000 for development)
#    - Copy App ID to NEXT_PUBLIC_ALCHEMY_APP_ID
#
# 3. ALCHEMY GAS MANAGER SETUP:
#    - Go to https://dashboard.alchemy.com/gas-manager
#    - Create a new gas policy for BNB Smart Chain
#    - Configure spending limits and allowed addresses
#    - Copy Policy ID to NEXT_PUBLIC_BNB_GAS_POLICY_ID
#
# 4. TESTING:
#    - Start with testnet (BSC Testnet) first
#    - Then switch to mainnet for production
#
# All social login, smart wallet, and gas management is handled by Alchemy!
# No additional third-party services required.