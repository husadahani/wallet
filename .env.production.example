# ==================================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# Alchemy Smart Wallet with Gas Manager & ERC4337
# ==================================================

# ==================================================
# ALCHEMY CORE CONFIGURATION
# ==================================================

# Main Alchemy API Key (REQUIRED)
# Get from: https://dashboard.alchemy.com/apps
NEXT_PUBLIC_ALCHEMY_API_KEY=ak_YOUR_PRODUCTION_API_KEY_HERE

# ==================================================
# NETWORK RPC ENDPOINTS
# ==================================================

# Ethereum Mainnet (Production)
NEXT_PUBLIC_ETH_MAINNET_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/ak_YOUR_MAINNET_KEY
NEXT_PUBLIC_ETH_MAINNET_GAS_POLICY_ID=pol_mainnet_YOUR_POLICY_ID

# Ethereum Sepolia (Testing/Staging)
NEXT_PUBLIC_ETH_SEPOLIA_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/ak_YOUR_SEPOLIA_KEY
NEXT_PUBLIC_ETH_SEPOLIA_GAS_POLICY_ID=pol_sepolia_YOUR_POLICY_ID

# Polygon Mainnet (Multi-chain support)
NEXT_PUBLIC_POLYGON_MAINNET_RPC_URL=https://polygon-mainnet.g.alchemy.com/v2/ak_YOUR_POLYGON_KEY
NEXT_PUBLIC_POLYGON_MAINNET_GAS_POLICY_ID=pol_polygon_YOUR_POLICY_ID

# BNB Smart Chain (Optional)
NEXT_PUBLIC_BNB_MAINNET_RPC_URL=https://bnb-mainnet.g.alchemy.com/v2/ak_YOUR_BNB_KEY
NEXT_PUBLIC_BNB_MAINNET_GAS_POLICY_ID=pol_bnb_YOUR_POLICY_ID

# ==================================================
# GAS MANAGER PRODUCTION SETTINGS
# ==================================================

# Enable Gas Manager
NEXT_PUBLIC_GAS_MANAGER_ENABLED=true
NEXT_PUBLIC_ENABLE_GAS_SPONSORSHIP=true

# Default network for gas policies (use 'mainnet' for production)
NEXT_PUBLIC_DEFAULT_GAS_POLICY_NETWORK=mainnet

# Gas Limits (Production Values)
NEXT_PUBLIC_DAILY_GAS_LIMIT=0.1
NEXT_PUBLIC_MONTHLY_GAS_LIMIT=2.0
NEXT_PUBLIC_MAX_GAS_LIMIT=1000000
NEXT_PUBLIC_DEFAULT_GAS_MULTIPLIER=1.2

# ==================================================
# ERC4337 SMART WALLET CONFIGURATION
# ==================================================

# EntryPoint Contract (v0.6 - Production)
NEXT_PUBLIC_ENTRYPOINT_ADDRESS=0x5FF137D4b0FDCD49DcA30c7CF57E578a026d2789

# Account Factory
NEXT_PUBLIC_ACCOUNT_FACTORY_ADDRESS=auto_detect
NEXT_PUBLIC_LIGHT_ACCOUNT_VERSION=v1.1.0

# Smart Account Settings
NEXT_PUBLIC_SMART_ACCOUNT_SALT=0
NEXT_PUBLIC_AUTO_DEPLOY_WALLET=true

# ==================================================
# PRODUCTION NETWORK DEFAULTS
# ==================================================

# Primary Network (Ethereum Mainnet for production)
NEXT_PUBLIC_DEFAULT_CHAIN_ID=1
NEXT_PUBLIC_DEFAULT_CHAIN_NAME=Ethereum Mainnet
NEXT_PUBLIC_DEFAULT_NETWORK_SYMBOL=ETH

# Network Switching
NEXT_PUBLIC_ALLOW_NETWORK_SWITCHING=true
NEXT_PUBLIC_SUPPORTED_NETWORKS=mainnet,polygon,sepolia

# ==================================================
# SOCIAL LOGIN PRODUCTION
# ==================================================

# Google OAuth (Production)
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=GOCSPX-your_google_client_secret

# Facebook OAuth (Production)
NEXT_PUBLIC_FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret

# OAuth Callbacks (Update with your domain)
NEXT_PUBLIC_OAUTH_REDIRECT_URL=https://yourapp.com/auth/callback
NEXT_PUBLIC_OAUTH_SUCCESS_REDIRECT=/dashboard

# ==================================================
# SECURITY CONFIGURATION
# ==================================================

# Private Key Encryption (CRITICAL)
NEXT_PUBLIC_ENCRYPT_PRIVATE_KEYS=true
ENCRYPTION_SECRET=your_super_strong_random_encryption_key_64_chars_minimum

# Session Management
NEXT_PUBLIC_SESSION_TIMEOUT=3600
NEXT_PUBLIC_REFRESH_TOKEN_ENABLED=true

# Rate Limiting
NEXT_PUBLIC_RATE_LIMIT_ENABLED=true
NEXT_PUBLIC_MAX_REQUESTS_PER_MINUTE=60

# ==================================================
# MONITORING & ANALYTICS
# ==================================================

# Error Tracking (Sentry)
NEXT_PUBLIC_SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id
NEXT_PUBLIC_ENABLE_ERROR_REPORTING=true

# Google Analytics
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=G-YOUR_GA_MEASUREMENT_ID
NEXT_PUBLIC_ENABLE_ANALYTICS=true

# Performance Monitoring
NEXT_PUBLIC_ENABLE_PERFORMANCE_MONITORING=true
NEXT_PUBLIC_SAMPLE_RATE=0.1

# ==================================================
# EXTERNAL API INTEGRATIONS
# ==================================================

# Price Feeds (CoinGecko)
NEXT_PUBLIC_COINGECKO_API_KEY=CG-your_coingecko_api_key
NEXT_PUBLIC_ENABLE_PRICE_FEEDS=true

# Webhooks
WEBHOOK_SECRET=your_webhook_secret_for_callbacks
NEXT_PUBLIC_WEBHOOK_URL=https://yourapp.com/api/webhooks/alchemy

# ==================================================
# PRODUCTION OPTIMIZATION
# ==================================================

# Build Settings
NEXT_PUBLIC_BUILD_ID=production
NEXT_PUBLIC_COMPRESSION_ENABLED=true

# CDN Configuration
NEXT_PUBLIC_CDN_URL=https://cdn.yourapp.com
NEXT_PUBLIC_ASSET_PREFIX=/static

# Caching
NEXT_PUBLIC_ENABLE_CACHING=true
NEXT_PUBLIC_CACHE_TTL=300

# ==================================================
# PRODUCTION FLAGS
# ==================================================

# Environment Mode
NODE_ENV=production
NEXT_PUBLIC_DEBUG_MODE=false
NEXT_PUBLIC_MOCK_TRANSACTIONS=false
NEXT_PUBLIC_LOG_LEVEL=error

# Feature Flags
NEXT_PUBLIC_E2E_TESTING=false
NEXT_PUBLIC_MOCK_SOCIAL_LOGIN=false

# ==================================================
# DATABASE & STORAGE (if needed)
# ==================================================

# Database URL (if using database for user management)
# DATABASE_URL=postgresql://user:password@host:port/database

# Redis (for session storage)
# REDIS_URL=redis://user:password@host:port

# File Storage (for NFT metadata, etc.)
# AWS_S3_BUCKET=your-app-assets
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# ==================================================
# DEPLOYMENT SPECIFIC
# ==================================================

# Vercel (if deploying to Vercel)
# VERCEL_URL will be auto-set by Vercel
# VERCEL_ENV=production

# Netlify (if deploying to Netlify)
# URL will be auto-set by Netlify
# CONTEXT=production

# Docker (if using containerization)
# PORT=3000
# HOST=0.0.0.0

# ==================================================
# BACKUP & RECOVERY
# ==================================================

# Backup encryption for critical data
BACKUP_ENCRYPTION_KEY=your_backup_encryption_key

# Recovery contact information
RECOVERY_EMAIL=admin@yourapp.com
RECOVERY_PHONE=+1234567890

# ==================================================
# COMPLIANCE & LEGAL
# ==================================================

# Terms of Service URL
NEXT_PUBLIC_TERMS_URL=https://yourapp.com/terms
NEXT_PUBLIC_PRIVACY_URL=https://yourapp.com/privacy

# Support Information
NEXT_PUBLIC_SUPPORT_EMAIL=support@yourapp.com
NEXT_PUBLIC_SUPPORT_URL=https://yourapp.com/support

# ==================================================
# MAINTENANCE MODE
# ==================================================

# Enable maintenance mode if needed
NEXT_PUBLIC_MAINTENANCE_MODE=false
NEXT_PUBLIC_MAINTENANCE_MESSAGE=We are currently performing scheduled maintenance.

# ==================================================
# CUSTOM DOMAIN SETTINGS
# ==================================================

# Your custom domain
NEXT_PUBLIC_APP_URL=https://yourapp.com
NEXT_PUBLIC_API_URL=https://api.yourapp.com

# Social Media Links
NEXT_PUBLIC_TWITTER_URL=https://twitter.com/yourapp
NEXT_PUBLIC_DISCORD_URL=https://discord.gg/yourapp
NEXT_PUBLIC_TELEGRAM_URL=https://t.me/yourapp